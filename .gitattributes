# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.py text eol=lf
*.R text eol=lf
*.r text eol=lf
*.qmd text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.bib text eol=lf
*.csl text eol=lf
*.tex text eol=lf
*.rst text eol=lf

# Data files (don't change line endings)
*.csv text eol=lf
*.tsv text eol=lf
*.dat binary
*.dta binary
*.sav binary
*.rds binary
*.rda binary
*.RData binary

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
*.md export-ignore
.editorconfig export-ignore
